<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.sysu.sse.recruitment.job_platform_api.mapper.UserMapper">
	<resultMap id="UserMap" type="cn.sysu.sse.recruitment.job_platform_api.domain.entity.User">
		<id column="id" property="id"/>
		<result column="email" property="email"/>
		<result column="password_hash" property="passwordHash"/>
		<result column="role" property="role" javaType="cn.sysu.sse.recruitment.job_platform_api.domain.enums.UserRole"/>
		<result column="status" property="status" javaType="cn.sysu.sse.recruitment.job_platform_api.domain.enums.UserStatus"/>
		<result column="created_at" property="createdAt"/>
		<result column="updated_at" property="updatedAt"/>
		<result column="last_login_at" property="lastLoginAt"/>
	</resultMap>

	<insert id="insert" parameterType="cn.sysu.sse.recruitment.job_platform_api.domain.entity.User" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO users (email, password_hash, role, status, created_at, updated_at, last_login_at)
		VALUES (#{email}, #{passwordHash}, #{role}, #{status}, NOW(), NOW(), #{lastLoginAt})
	</insert>

	<update id="update" parameterType="cn.sysu.sse.recruitment.job_platform_api.domain.entity.User">
		UPDATE users
		SET
			email = #{email},
			password_hash = #{passwordHash},
			role = #{role},
			status = #{status},
			updated_at = NOW(),
			last_login_at = #{lastLoginAt}
		WHERE id = #{id}
	</update>

	<delete id="deleteById">
		DELETE FROM users WHERE id = #{id}
	</delete>

	<select id="findById" resultMap="UserMap">
		SELECT * FROM users WHERE id = #{id}
	</select>

	<select id="findByEmail" resultMap="UserMap">
		SELECT * FROM users WHERE email = #{email}
	</select>

	<select id="list" resultMap="UserMap">
		SELECT * FROM users ORDER BY id DESC LIMIT #{limit} OFFSET #{offset}
	</select>

	<select id="countAll" resultType="long">
		SELECT COUNT(1) FROM users
	</select>
</mapper>


