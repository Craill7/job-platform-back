<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.sysu.sse.recruitment.job_platform_api.server.mapper.TagMapper">
	<resultMap id="TagMap" type="cn.sysu.sse.recruitment.job_platform_api.pojo.entity.Tag">
		<id column="id" property="id"/>
		<result column="name" property="name"/>
		<result column="created_at" property="createdAt"/>
		<result column="category_id" property="categoryId"/>
	</resultMap>

	<insert id="insert" parameterType="cn.sysu.sse.recruitment.job_platform_api.pojo.entity.Tag" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO tags (name, created_at, category_id)
		VALUES (#{name}, NOW(), #{categoryId})
	</insert>

	<select id="listAll" resultMap="TagMap">
		SELECT * FROM tags ORDER BY id ASC
	</select>

	<select id="listByCategory" resultMap="TagMap">
		SELECT * FROM tags WHERE category_id = #{categoryId} ORDER BY id ASC
	</select>

	<select id="findByNameIn" resultMap="TagMap">
		SELECT * FROM tags
		WHERE name IN
		<foreach collection="names" item="name" open="(" separator="," close=")">
			#{name}
		</foreach>
	</select>

	<select id="findTagsByJobId" resultMap="TagMap">
		SELECT t.*
		FROM tags t
		INNER JOIN job_tags jt ON t.id = jt.tag_id
		WHERE jt.job_id = #{jobId}
	</select>
</mapper>



