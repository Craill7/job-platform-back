<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.sysu.sse.recruitment.job_platform_api.server.mapper.ApplicationStatusMapper">
	<resultMap id="ApplicationStatusMap" type="cn.sysu.sse.recruitment.job_platform_api.pojo.entity.ApplicationStatusEntity">
		<id column="id" property="id"/>
		<result column="code" property="code"/>
		<result column="name" property="name"/>
		<result column="detail" property="detail"/>
		<result column="created_at" property="createdAt"/>
		<result column="updated_at" property="updatedAt"/>
	</resultMap>

	<select id="findByCode" resultMap="ApplicationStatusMap">
		SELECT * FROM application_statuses WHERE code = #{code} LIMIT 1
	</select>
</mapper>

