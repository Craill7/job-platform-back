<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.sysu.sse.recruitment.job_platform_api.server.mapper.ResumeMapper">
	<resultMap id="ResumeMap" type="cn.sysu.sse.recruitment.job_platform_api.pojo.entity.Resume">
		<id column="id" property="id"/>
		<result column="student_user_id" property="studentUserId"/>
		<result column="file_name" property="fileName"/>
		<result column="file_url" property="fileUrl"/>
		<result column="file_size" property="fileSize"/>
		<result column="usage_type" property="usageType"/>
		<result column="uploaded_at" property="uploadedAt"/>
		<!-- template_id字段在数据库表中不存在，但保留在实体和VO中以便将来扩展 -->
	</resultMap>

	<insert id="insert" parameterType="cn.sysu.sse.recruitment.job_platform_api.pojo.entity.Resume" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO resume (student_user_id, file_name, file_url, file_size, usage_type, uploaded_at)
		VALUES (#{studentUserId}, #{fileName}, #{fileUrl}, #{fileSize}, #{usageType}, NOW())
	</insert>

	<select id="findById" resultMap="ResumeMap">
		SELECT * FROM resume WHERE id = #{id}
	</select>

	<select id="findByStudentUserId" resultMap="ResumeMap">
		SELECT * FROM resume
		WHERE student_user_id = #{studentUserId}
		ORDER BY uploaded_at DESC
	</select>

	<delete id="deleteById">
		DELETE FROM resume WHERE id = #{id}
	</delete>
</mapper>

